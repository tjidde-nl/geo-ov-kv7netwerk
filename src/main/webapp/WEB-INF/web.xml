<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>geo-ov-kv7netwerk</display-name>
    <servlet>
        <servlet-name>DataReceiverServlet</servlet-name>
        <servlet-class>nl.b3p.kv7netwerk.DataReceiverServlet</servlet-class>
        <init-param>
            <param-name>dir</param-name>
            <param-value>/var/opt/kv7netwerk</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DataProcessorServlet</servlet-name>
        <servlet-class>nl.b3p.kv7netwerk.DataProcessorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataReceiverServlet</servlet-name>
        <url-pattern>/data</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataProcessorServlet</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
